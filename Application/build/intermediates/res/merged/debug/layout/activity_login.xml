<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bluetoothlegatt.Activity.LoginActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_loginn"
            android:scaleType="centerCrop" />

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="280dp" />

                <EditText
                    android:id="@+id/edtUsername"
                    android:background="@drawable/username_field"
                    android:layout_width="match_parent"
                    android:layout_height="54.5dp"
                    android:hint="@string/hint_user"
                    android:minEms="9"
                    android:singleLine="true"
                    android:paddingTop="16dp"
                    android:imeOptions="actionNext"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:id="@+id/edtPassword"
                    android:background="@drawable/password_field"
                    android:layout_width="match_parent"
                    android:layout_height="54.5dp"
                    android:inputType="textPassword"
                    android:paddingTop="16dp"
                    android:singleLine="true"
                    android:hint="@string/hint_pass"
                    android:layout_marginBottom="30dp"/>

                <Button
                    android:id="@+id/btnLogin"
                    android:text="@string/btn_login"
                    android:background="@drawable/selector_btn_login"
                    android:textColor="@color/white_text"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="54.5dp"/>

            </LinearLayout>
        </ScrollView>




</RelativeLayout>
