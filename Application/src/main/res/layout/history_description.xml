<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="-12dp"
        android:scaleType="matrix"
        android:src="@drawable/history_normal"
        android:id="@+id/heartRateStatus" />

    <LinearLayout
            android:layout_marginStart="100dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMeasuringId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="7dp"
                android:layout_toStartOf="@+id/tvHeartRate"
                android:text="ME******************"
                android:textColor="@color/colorPrimary"
                android:textSize="9pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tvMeasuringId"
                    android:layout_below="@+id/tvMeasuringId"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:text="ชีพจร"
                    android:textColor="@color/black_color"
                    android:textSize="9pt" />

                <TextView
                    android:id="@+id/tvHeartRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="3"
                    android:text="** ครั้ง/นาที"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:text="เวลา"
                    android:textColor="@color/black_color"
                    android:textSize="9pt" />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="2"
                    android:text="********************"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9pt" />

            </LinearLayout>
        </LinearLayout>

</RelativeLayout>